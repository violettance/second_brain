{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["bun-types", "@types/bun"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "src",
    "tests/**/*"
  ]
}
